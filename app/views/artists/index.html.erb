<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Instagramid</th>
      <th>Location</th>
      <th>Website</th>
      <th>Bio</th>
      <th>Profilepicture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.instagramID %></td>
        <td><%= artist.location %></td>
        <td><%= artist.website %></td>
        <td><%= artist.bio %></td>
        <td><%= artist.profilePicture %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

